<%- include("partials/header") %>

<div class="main-container">
  <div class="login-container">
    <div class="card-panel hoverable">
  
      <!-- headings -->
      <h3 class="heading">
        User Management System
      </h3>
      <h3 class="sub-heading center-align">Login</h3>
      <!-- ---- -->
  
      <!-- Login forms -->
      <div class="flexbox-container">
        <form class="form-container center-align" action="/home" method="POST">
          <!-- Email input -->
          <div class="row" >
            <div class="input-field col s12 label-color-alternate">
              <i class="material-icons prefix">mail</i>
              <input id="icon_prefix" type="email" class="validate" name="username" />
              <label for="icon_prefix">Email</label>
            </div>
          </div>
          <!-- Password Input -->
          <div class="row">
            <div class="input-field col s12 label-color-alternate">
              <i class="material-icons prefix">vpn_key</i>
              <input id="icon_password" type="password" class="validate" name="password" />
              <label for="icon_password">Password</label>
            </div>
          </div>
          <!-- Login button -->
          <div class="row">
            <button type="submit" class="waves-effect waves-light-purple waves-ripple btn login-btn">Login</button>
          </div>
  
          
          <!-- Sign-up button -->
          <div class="row">New User ? 
            <a
              href="/signup"
              > Sign up. </a>
          </div>
        </form>
        <!-- Login form ends -->
  
        <!-- Some bottom designs -->
        <svg id="svg-wave" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
          <defs>
            <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" style="stop-color:rgb(173, 83, 137);stop-opacity:1" />
              <stop offset="100%" style="stop-color:rgb(60, 16, 83);stop-opacity:1" />
            </linearGradient>
          </defs>
          <path
            fill="url(#gradient)"
            fill-opacity="1"
            d="M0,64L48,101.3C96,139,192,213,288,245.3C384,277,480,267,576,218.7C672,171,768,85,864,42.7C960,0,1056,0,1152,37.3C1248,75,1344,149,1392,186.7L1440,224L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
          ></path>
        </svg>
      </div>
    </div>
  </div>
</div>


